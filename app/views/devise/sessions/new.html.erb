<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white rounded-2xl shadow-md">
    <h2 class="text-2xl font-bold text-center text-gray-800">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-4">
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-4">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <div class="mt-6">
          <%= f.submit "Log in", class: "w-full px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      </div>
    <% end %>

    <div class="mt-4 text-sm text-center text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
